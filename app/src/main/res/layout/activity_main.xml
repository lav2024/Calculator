<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:padding="20dp">
    
    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        tools:ignore="HardcodedText"
        android:textStyle="bold"
        android:textSize="60sp"
        android:textColor="#181818"
        android:paddingHorizontal="15dp"
        android:paddingVertical="35dp"
        android:layout_above="@+id/nums"/>
    
    <LinearLayout
        android:id="@+id/nums"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/on"
                android:text="ON"
                tools:ignore="HardcodedText"
                style="@style/Button1"/>

            <Button
                android:id="@+id/num7"
                android:text="7"
                tools:ignore="HardcodedText"
                style="@style/Button2"/>

            <Button
                android:id="@+id/num4"
                android:text="4"
                tools:ignore="HardcodedText"
                style="@style/Button2"/>

            <Button
                android:id="@+id/num1"
                android:text="1"
                tools:ignore="HardcodedText"
                style="@style/Button2"/>

            <Button
                android:id="@+id/del"
                android:text="del"
                tools:ignore="HardcodedText"
                style="@style/Button2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/off"
                android:text="off"
                tools:ignore="HardcodedText"
                style="@style/Button1"/>

            <Button
                android:id="@+id/num8"
                android:text="8"
                tools:ignore="HardcodedText"
                style="@style/Button2"/>

            <Button
                android:id="@+id/num5"
                android:text="5"
                tools:ignore="HardcodedText"
                style="@style/Button2"/>

            <Button
                android:id="@+id/num2"
                android:text="2"
                tools:ignore="HardcodedText"
                style="@style/Button2"/>

            <Button
                android:id="@+id/num0"
                android:text="0"
                tools:ignore="HardcodedText"
                style="@style/Button2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/ac"
                android:text="AC"
                tools:ignore="HardcodedText"
                style="@style/Button1"/>

            <Button
                android:id="@+id/num9"
                android:text="9"
                tools:ignore="HardcodedText"
                style="@style/Button2"/>

            <Button
                android:id="@+id/num6"
                android:text="6"
                tools:ignore="HardcodedText"
                style="@style/Button2"/>

            <Button
                android:id="@+id/num3"
                android:text="3"
                tools:ignore="HardcodedText"
                style="@style/Button2"/>

            <Button
                android:id="@+id/point"
                android:text="."
                tools:ignore="HardcodedText"
                style="@style/Button2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/div"
                android:text="/"
                tools:ignore="HardcodedText"
                style="@style/Button1"/>

            <Button
                android:id="@+id/times"
                android:text="X"
                tools:ignore="HardcodedText"
                style="@style/Button1"/>

            <Button
                android:id="@+id/min"
                android:text="-"
                tools:ignore="HardcodedText"
                style="@style/Button1"/>

            <Button
                android:id="@+id/plus"
                android:text="+"
                tools:ignore="HardcodedText"
                style="@style/Button1"/>

            <Button
                android:id="@+id/equal"
                android:text="="
                tools:ignore="HardcodedText"
                style="@style/Button1"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>